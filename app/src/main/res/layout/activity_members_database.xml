<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MembersDatabaseActivity">

    <TextView
        android:id="@+id/txt_name"
        style="@style/DefaultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:text="Name" />

    <EditText
        android:id="@+id/et_name"
        style="@style/EditTextEddMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txt_surname"
        style="@style/DefaultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="Surname" />

    <EditText
        android:id="@+id/et_surname"
        style="@style/EditTextEddMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="surname"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txt_data_birth"
        style="@style/DefaultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Data of birth" />

    <DatePicker
        android:id="@+id/picker_bithday"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />

    <Button
        android:id="@+id/btn_save_date_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save date"
        android:layout_gravity="center"
        android:onClick="saveDate"/>

    <TextView
        android:id="@+id/txt_phone_number"
        style="@style/DefaultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Phone number" />

    <EditText
        android:id="@+id/et_phone_number"
        style="@style/EditTextEddMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone nomber" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_add_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="#00FF7F"
            android:onClick="addNewMember"
            android:text="Add" />

        <Button
            android:id="@+id/btnViewAllMembers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="#00FF7F"
            android:onClick="viewAllMembersList"
            android:text="View all" />

        <Button
            android:id="@+id/btn_find_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="#00FF7F"
            android:onClick="findMember"
            android:text="Find" />

        <Button
            android:id="@+id/btn_edit_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FF7F"
            android:onClick="editMember"
            android:text="Edit" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_delete_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="16dp"
        android:background="#FF0000"
        android:onClick="deleteMember"
        android:text="delete" />

</LinearLayout>