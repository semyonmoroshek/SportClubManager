<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberInfoActivity">

    <ImageView
        android:id="@+id/iv_member_photo"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitStart"
        android:src="@drawable/tyson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_found_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Member name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/iv_member_photo"
        app:layout_constraintTop_toTopOf="@+id/iv_member_photo" />

    <TextView
        android:id="@+id/txt_found_member_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Member surname"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txt_found_member_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_found_member_name"

         />

    <TextView
        android:id="@+id/txt_found_member_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"

        android:text="Phone number"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/txt_found_member_surname"
        app:layout_constraintTop_toBottomOf="@+id/txt_found_member_surname" />

    <TextView
        android:id="@+id/txt_found_member_payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Payment date"
        android:textSize="20sp"

        app:layout_constraintStart_toStartOf="@+id/txt_found_member_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/txt_found_member_phone_number" />




</androidx.constraintlayout.widget.ConstraintLayout>