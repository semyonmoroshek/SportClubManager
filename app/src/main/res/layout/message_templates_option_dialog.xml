<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_writeNewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="write new Message"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_writeTemplate_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="write template 1"
        app:layout_constraintTop_toBottomOf="@+id/btn_writeNewMessage" />

    <Button
        android:id="@+id/btn_writeTemplate_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="write template 2"
        app:layout_constraintTop_toBottomOf="@+id/btn_writeTemplate_1" />

    <Button
        android:id="@+id/btn_writeTemplate_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="write template 3"
        app:layout_constraintTop_toBottomOf="@+id/btn_writeTemplate_2" />


</androidx.constraintlayout.widget.ConstraintLayout>